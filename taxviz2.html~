        <script type="text/javascript">
            
			// Initial d3 stuff
			var width = 600;
			var height = 600;
			var bar_height = 400;
			var y_padding = 10;
			var line_width = 5;
			
			var svg = d3.select("#viz")
				        .append("svg")
				        .attr("width", width)
				        .attr("height", height)
				
			// Initialize input object
			var inputs = {
				earned_income: 50000,
				ltcg: 0,
				exemptions: 1,
				deductions: 6300
			};
			
			// Set static tax values object
			var single = {
    			    income_tax: [
    			        {bracket: 9275, rate: 10},
    			        {bracket: 37650, rate: 15},
    			        {bracket: 91150, rate: 25},
    			        {bracket: 190150, rate: 28},
    			        {bracket: 413350, rate: 33}
    			    ],
	    		    ltcg_tax: [
	    		        {bracket: 37650, rate: 0},
	    		        {bracket: 413350, rate: 15}
	    		    ],
	    		    fica_tax: [
	    		        {bracket: 118500, rate: 7.65},
	    		        {bracket: 1000000, rate: 1.45}
	    		        ],
	    		    personal_exemption_value: 4050
			};
			
			// Utility functions
			
			function add(a, b) {
				return a + b;
			};
			
			function get_tax_brackets(taxable_income, brackets) {
			    var n_brackets = brackets
			                     .map(function(x) {return (taxable_income > x.bracket)})
			                     .reduce(add, 0);
			    return brackets.slice(0, n_brackets + 1);
			};
			
			
			// Function to generate calculated values
			function calculated_values(inputs, static_vals) {
			    var calc = new Object();
			    calc.taxable_income =
			        Math.max(inputs.earned_income - inputs.deductions
			        - (inputs.exemptions * static_vals.personal_exemption_value), 0);
			    calc.income_tax =
			        get_tax_brackets(calc.taxable_income, static_vals.income_tax);
//			        marginal: ,
//			        average: ,
//			        due: };
			    calc.fica =
			        get_tax_brackets(inputs.earned_income, static_vals.fica_tax);
//			        marginal: ,
//			        average:  ,
//			        due: };
			    calc.ltcg = 
			        get_tax_brackets(calc.taxable_income + inputs.ltcg, static_vals.ltcg_tax);
//			        marginal:  ,
//			        due: };
//			    calc.net = {
//			        earned_income: ,
//			        ltcg: };
			    
			    
			    return calc;
			};
			
			
			// Function to regenerate after  values change.
			function regen(inputs, static_vals) {
			
			    // Define dollar to pixel scale
		        barScale = d3.scale.linear()
		                           .domain([0, inputs.gIncome * 1.05])
							       .range([bar_height, 0]);
							       
				// Generate axis and call it on axis group TODO: create axis once and update it.
				yAxis = d3.svg.axis()
					.orient("left")
					.ticks(5)
					.scale(barScale);
				d3.select(".axis")
					.call(yAxis);
					
			    // Recalculate calculated values

			}
							
			
			//=================================================================			
			// On input, update variables and regenerate
			d3.select("#earned_income").on("input", function() {
				inputs.earned_income = +this.value;
				regen(inputs);
				});
			d3.select("#ltcg").on("input", function() {
				inputs.ltcg = +this.value;
				regen(inputs);
				});
			d3.select("#exemptions").on("input", function() {
				inputs.exemptions = +this.value;
				regen(inputs);
				});
			d3.select("#deductions").on("input", function() {
				inputs.deductions = +this.value;
				regen(inputs);
				});

			//=================================================================				
			// Generate everything with initial values
			init_gen(inputs);
			
        </script>
